FILE=$HOME/.tp
ARG=$1
if [ -f "$FILE" ]; then
    if [ ! $ARG ]; then
        > $FILE
        echo "$PWD" >> $FILE
        DESTINATION=$(<$FILE)
        echo "Portal created in $DESTINATION, waiting for contentsâ€¦"
        exit 1
    else
        DESTINATION=$(<$FILE)
        SOURCE="$PWD/$ARG"
        if [ -d $ARG ]; then
            cp -r $SOURCE $DESTINATION
            echo "Copying directory: $ARG"
            > $FILE
            exit 1
        elif [ -f $ARG ]; then
            echo "Copying file: $ARG"
            cp $SOURCE $DESTINATION
            > $FILE
            exit 1
        else
            echo "$ARG is not valid"
            exit 1
        fi
    fi    
else
    touch $FILE
fi